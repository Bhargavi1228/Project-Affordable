<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:background="@color/backgroundColor"
    android:paddingHorizontal="@dimen/_18sdp"
    android:paddingTop="@dimen/_18sdp"
    android:theme="@style/Theme.MaterialComponents.Light"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_40sdp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_26sdp"
            android:layout_marginHorizontal="@dimen/_2sdp"
            app:cardCornerRadius="@dimen/_20sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="23dp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_20sdp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:src="@mipmap/ic_launcher_round" />

                <TextView
                    style="@style/TextViewStyle30B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:textSize="34sp"
                    android:text="Sign In"
                    android:textColor="@color/primaryColor" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_26sdp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TextViewStyle15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_6sdp"
                        android:fontFamily="@font/inter_medium"
                        android:text="Email"
                        android:textColor="@color/grayDarkColor"
                        android:textSize="12sp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/emailLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:inputType="text"
                        android:textColorHint="@color/grayColor"
                        app:boxBackgroundColor="@android:color/white"
                        app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                        app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                        app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                        app:boxCornerRadiusTopStart="@dimen/_8sdp"
                        app:boxStrokeColor="@color/edittext_stroke_color"
                        app:boxStrokeErrorColor="@color/colorError"

                        app:boxStrokeWidth="2dp"
                        app:errorEnabled="true"
                        app:errorIconDrawable="@null"
                        app:errorTextAppearance="@style/TextViewStyle11Error"
                        app:errorTextColor="@color/colorError"

                        app:hintEnabled="false"
                        app:hintTextAppearance="@style/TextAppearance.AppCompat.Small"
                        app:hintTextColor="@color/black"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/email"
                            style="@style/TextViewStyle13M"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="15"
                            android:fontFamily="@font/inter_medium"
                            android:textCursorDrawable="@drawable/cursor_color"
                            android:hint="Enter your Email"
                            android:inputType="text"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="14sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TextViewStyle15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_6sdp"
                        android:fontFamily="@font/inter_medium"
                        android:text="Password"
                        android:textColor="@color/grayDarkColor"
                        android:textSize="12sp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/passwordLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:inputType="textPassword"
                        android:textColorHint="@color/grayColor"
                        app:boxBackgroundColor="@android:color/white"
                        app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                        app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                        app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                        app:boxCornerRadiusTopStart="@dimen/_8sdp"
                        app:boxStrokeColor="@color/edittext_stroke_color"
                        app:boxStrokeErrorColor="@color/colorError"
                        app:boxStrokeWidth="2dp"

                        app:errorEnabled="true"
                        app:errorIconDrawable="@null"
                        app:errorTextAppearance="@style/TextViewStyle11Error"
                        app:errorTextColor="@color/colorError"
                        app:hintEnabled="false"

                        app:hintTextAppearance="@style/TextAppearance.AppCompat.Small"
                        app:hintTextColor="@color/black"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:passwordToggleEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/password"
                            style="@style/TextViewStyle13M"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="15"
                            android:fontFamily="@font/inter_medium"
                            android:hint="Enter your Password"
                            android:textCursorDrawable="@drawable/cursor_color"
                            android:inputType="textPassword"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="14sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/continueLogin"
                    style="@style/TextViewStyle11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:backgroundTint="@color/blueLightColor"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="center"
                    android:paddingVertical="@dimen/_10sdp"
                    android:shadowColor="@color/grayColor"
                    android:text="Continue"
                    android:textColor="@color/whiteColor"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:theme="@style/Theme.MaterialComponents.Light"
                    android:visibility="visible"
                    app:cornerRadius="@dimen/_8sdp" />

                <TextView
                    style="@style/TextViewStyle30B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:textSize="18sp"
                    android:text="or"
                    android:textColor="@color/black" />


                <LinearLayout
                    android:id="@+id/continuePhoneLayout"
                    android:layout_width="match_parent"
                    android:clickable="true"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/bg_rounded_black"
                    android:orientation="horizontal"
                    android:padding="@dimen/_8sdp">


                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:gravity="center"
                        android:visibility="visible"
                        android:src="@drawable/ic_round_local_phone_24"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/blueLightColor"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:gravity="center_horizontal"
                        android:text="Continue with Phone"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/continueGoogleLayout"
                    android:layout_width="match_parent"
                    android:clickable="true"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/bg_rounded_black"
                    android:orientation="horizontal"
                    android:padding="@dimen/_8sdp">


                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:gravity="center"
                        android:visibility="visible"
                        android:src="@drawable/ic_google"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                         />

                    <TextView
                        android:id="@+id/continueWithGoogle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:gravity="center_horizontal"
                        android:text="Continue with Google"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextViewStyle11B"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_bold"
                        android:padding="@dimen/_4sdp"
                        android:text="D\'ont have an account?"
                        android:textColor="@color/black"
                        android:textSize="12sp" />


                    <TextView
                        android:id="@+id/signup"
                        style="@style/TextViewStyle11B"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:fontFamily="@font/inter_bold"
                        android:padding="@dimen/_4sdp"
                        android:text=" Sign Up"
                        android:textColor="@color/primaryColor"
                        android:textSize="12sp" />

                </LinearLayout>



            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.cardview.widget.CardView>

    </LinearLayout>


</ScrollView>